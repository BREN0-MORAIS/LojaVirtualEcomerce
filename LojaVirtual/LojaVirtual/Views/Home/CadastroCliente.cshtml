@model Cliente
<main role="main">

    <section class="container" style="margin-top: 50px">
        <div class="row">
            <aside class="col-sm-6">
                <h3 class="subtitle-doc">
                    Cadastro de Cliente
                </h3>
                @if (ViewData["MSG_S"] != null)
                {
                    <p class="alert alert-success">@TempData["MSG_S"]</p>
                }
                @if (ViewData["MSG_E"] != null)
                {
                    <p class="alert alert-danger">@TempData["MSG_E"]</p>
                }

                <div id="code_register_1">
                    <div class="card">
                        <header class="card-header">
                            <a asp-controller="home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Log in</a>
                            <h4 class="card-title mt-2 align-content-center">Registrar-se</h4>
                        </header>
                        <article class="card-body">
                            <form asp-action="CadastroCliente" asp-controller="Home" method="post">
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nome">Nome</label>
                                        <input asp-for="Nome" type="text" class="form-control" placeholder="">
                                        <span asp-validation-for="Nome"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nascimento">Data Nascimento</label>
                                        <input asp-for="Nascimento" type="text" class="form-control" placeholder="">
                                        <span asp-validation-for="Nascimento"></span>
                                    </div>
                                </div>
                                <div class="form-row">
      
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="M" />
                                        <span class="form-check-label">Masculino</span>
                                    </label>

                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="F" />
                                        <span class="form-check-label">Feminino</span>
                                    </label>
                                </div>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="CPF">CPF</label>
                                        <input asp-for="CPF" type="text" class="form-control" placeholder="">
                                        <span asp-validation-for="Sexo"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Telefone">Telefone</label>
                                        <input asp-for="Telefone" type="text" class="form-control" placeholder="">
                                        <span asp-validation-for="Sexo"></span>
                                    </div>
                                </div>


                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Email">E-mail</label>
                                        <input asp-for="Email" type="text" class="form-control" placeholder="">
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>


                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Senha">Senha</label>
                                        <input asp-for="Senha" type="password" type="password" class="form-control" placeholder="">
                                        <span asp-validation-for="Senha"></span>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div>
                                <small class="text-muted">
                                    Ao clicar no botão 'Cadastre-se',
                                    você confirma que aceita nossos <br> Termos de Uso e Política de Privacidade.
                                </small>
                            </form>
                        </article>
                        <div class="border-top card-body text-center">Tem uma conta? <a asp-action="Login" asp-controller="Home">LogIn</a></div>
                    </div>

                </div>
            </aside>
        </div>
    </section>
</main>